@startuml
actor Usuario

participant "cp: ControladorPago" as P
participant "cpg: <Singleton> CatálogoDePagos" as CatP
participant "pago[i]: Pago" as Pg

== Modificación de pago ==
Usuario -> P : modificar_pago(pago_id, nuevos_datos)
activate P

P -> CatP : buscar_pago(pago_id)
activate CatP

loop para cada pago en CatálogoDePagos
    CatP -> Pg : getId()
    activate Pg
    Pg --> CatP : <<id : pago_id>>
      note right of CatP
        Si id = pago_id  
        pago = pago[i]  
        cortar iteración
      end note
    deactivate Pg
end

CatP --> P : <<pago:Pago>>
deactivate CatP

alt Pago encontrado
    P -> Pg : actualizar_datos(nuevos_datos)
    activate Pg
    Pg --> P : <<confirmación modificación (boolean)>>
    deactivate Pg
    P --> Usuario : <<confirmación modificación (boolean)>>
else Pago no encontrado / error
    P --> Usuario : <<mensaje de error("No se encontró el pago a modificar")>>
end

deactivate P
@enduml

