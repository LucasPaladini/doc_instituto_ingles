@startuml
actor Administrador

participant "cc: ControladorCurso" as CC
participant "cdc: <Singleton> Cat치logoDeCursos" as CatC
participant "esp[i]: Especificaci칩nDeCurso" as E
participant "curso: Curso" as Curso

== Consulta de curso ==
Administrador -> CC : consultar_curso(curso_id)
activate CC

CC -> CatC : buscar_curso(curso_id)
activate CatC

loop para cada curso en Cat치logoDeCursos
    CatC -> E : getId()
    activate E
    E --> CatC : <<id : curso_id>>
      note right of CatC
        Si id = curso_id
        curso = esp[i]
        cortar iteraci칩n
      end note
    deactivate E
end

CatC --> CC : <<curso:Curso>>
deactivate CatC

alt Curso encontrado
    CC -> Curso : obtener_datos()
    activate Curso
    Curso --> CC : <<datos>>
    deactivate Curso

    CC --> Administrador : <<datos del curso>>
else Curso no encontrado / error
    CC --> Administrador : <<mensaje de error>>
end

deactivate CC
@enduml

