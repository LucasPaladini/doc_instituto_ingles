@startuml
actor Administrador

participant "cc: ControladorCurso" as CC
participant "cdc: <Singleton> CatálogoDeCursos" as CatC
participant "esp[i]: EspecificaciónDeCurso" as E
participant "curso: Curso" as Curso


== Baja de curso ==
Administrador -> CC : solicitar_baja_curso(curso_id)
activate CC

CC -> CatC : buscar_curso(curso_id)
activate CatC

loop para cada curso en CatálogoDeCursos
  
    CatC -> E : getId()
    activate E
    E --> CatC : <<id : curso_id>>
      note right of CatC
        Si id = curso_id
        curso = esp[i]
        cortar iteración
      end note
    deactivate E
end

CatC --> CC : <<curso:Curso>>
deactivate CatC

alt Curso encontrado
    CC -> Curso : eliminar_curso()
    activate Curso
    Curso --> CC : <<confirmación baja (boolean)>>
    deactivate Curso
    CC --> Administrador : <<confirmación baja (boolean)>>
else Curso no encontrado / error
    CC --> Administrador : <<mensaje de error>>
end

deactivate CC
@enduml

